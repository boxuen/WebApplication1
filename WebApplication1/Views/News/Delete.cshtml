@model WebApplication1.Models.News

@{
    ViewBag.Title = "Delete";
}
<head>
    <style>
        #card{
            padding:10px;
        }
        .pagetitle{
            font-size:15px;
        }
    </style>
    <script>
        window.alert("注意！此為刪除資料頁面，請再次確認是否刪除此筆資料?");

    </script>
</head>
<main class="main" id="main">
    <div class="pagetitle">
        <h1>最新公告維護 <span class="pagetitle"><i class="ri-arrow-drop-right-fill"></i>使用者進行刪除此筆最新公告紀錄。</span></h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home">Home</a></li>
                <li class="breadcrumb-item active">最新公告</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <strong><p class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert">注意！此為刪除資料頁面，請再次確認是否刪除此筆資料?</p></strong>
    <button class="btn btn-success"><i class="ri-arrow-left-line">@Html.ActionLink("返回", "Index", null, new { style = "color: white;" })</i></button>
    <hr />
    <div class="card info-card sales-card" id="card">
        <table border="1" class="table table-striped">
            <tr>
                <td width="8%">建立時間:</td>
                <td> @Html.DisplayFor(model => model.Creat_Time)</td>
            </tr>
            <tr>
                <td width="8%">發布人:</td>
                <td> @Html.DisplayFor(model => model.AccountData.Username)</td>
            </tr>
            <tr>
                <td width="8%">公告類別:</td>
                <td>  @Html.DisplayFor(model => model.Category)</td>
            </tr>
            <tr>
                <td width="8%">公告主旨:</td>
                <td>  @Html.DisplayFor(model => model.Address)</td>
            </tr>
            <tr>
                <td width="8%">公告內容:</td>
                <td> @Html.DisplayFor(model => model.Contant)</td>
            </tr>
            <tr>
                <td width="8%">附件上傳:</td>
                <td>  @Html.DisplayFor(model => model.Upload)</td>
            </tr>

        </table>
      

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="確定刪除" class="btn btn-danger" />

            </div>
        }
    </div>


</main>

