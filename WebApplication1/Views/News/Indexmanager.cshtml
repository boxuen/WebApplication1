@model IEnumerable<WebApplication1.Models.News>

@{
    ViewBag.Title = "最新公告";
    Layout = "~/Views/Shared/_Layout - manager.cshtml";

}
<head>
    <style>
        .pagetitle {
            font-size: 15px;
        }

        .txt a {
            color: white;
        }

        #card {
            padding: 10px;
        }
    </style>
</head>
<main class="main" id="main">
    <div class="pagetitle">
        <h1>最新公告 <span class="pagetitle"><i class="ri-arrow-drop-right-fill"></i>提供新增、修改、刪除一筆戰隊最新公告資訊。</span></h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home">Home</a></li>
                <li class="breadcrumb-item active">最新公告</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <p>
        <button class="btn btn-primary">@Html.ActionLink("新增一筆公告", "Create", null, new { style = "color: white;" })</button>
    </p>
    <div class="card info-card sales-card" id="card">
        <table class="table">
            <tr>
                <th>
                    公告時間
                </th>
                <th>
                    公告類別
                </th>
                <th>
                    公告主旨
                </th>

                <th>
                    公告附件
                </th>
                <th>
                    發布人
                </th>
                <th>資料操作</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Creat_Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Upload)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountData.Username)
                    </td>
                    <td>
                        <button class="btn btn-primary">
                            <span class='txt'>@Html.ActionLink("編輯", "Edit", new { id = item.ID }, null)</span>
                        </button> |
                        <button class="btn btn-secondary">
                            <span class='txt'>@Html.ActionLink("查看公告", "Details", new { id = item.ID }, null)</span>

                        </button> |
                        <button class="btn btn-danger">
                            <span class='txt'>@Html.ActionLink("刪除", "Delete", new { id = item.ID }, null)</span>

                        </button>
                    </td>
                </tr>
            }

        </table>

    </div>

</main>

