    <style>
        body {
            background-color: #000000cb;
            justify-content: center;
            display: flex;
            align-items: center;
            padding: 10%;
        }

        .model_container {
            position: relative;
            z-index: 2;
            margin: auto;
            max-width: inherit;
            width: auto;
        }

        .auth {
            display: flex;
            width: 840px;
            margin: 0 auto;
            background-color: #262626;
            border-radius: 24px;
            box-shadow: 0px 0px 10px #ffffffe2;
        }

        .auth_background {
            position: relative;
        }

            .auth_background img {
                position: relative;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border-radius: 24px 0 0 24px;
                object-fit: cover;
            }

        .auth_background, .auth_container {
            flex: 0 0 420px;
        }

        .auth_container {
            padding: 40px 40px 32px;
        }

        .title {
            margin-bottom: 26px;
            font-size: 28px;
            font-weight: 450;
            line-height: 40px;
            color: white;
        }

        label {
            color: white;
        }

        .form-control {
            padding: 3%;
        }

        hr {
            border: 2px solid white;
        }

        .btn-primary {
            width: 100%;
            margin-top: 10px;
        }

        .error {
            font-size: 15px;
            color: yellow;
            background-color:blue;
        }
        .error li{
            list-style:none;
        }
        .error ul{
            padding-left:0.5rem;
            margin-top:7px;
            margin-bottom:0px;
        }
                    </style>
</head>

<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div class="model_container">
            <div class="auth">
                <div class="auth_background">
                    <img src="~/img/icon.png" alt="Sign in" />
                </div>
                <div class="auth_container">
                    <h2 class="title"> Sign in to your account</h2> <hr />
                    <label>請輸入帳號:</label>
                    @Html.TextBox("Account", null, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="Account" name="Account" placeholder="帳號">*@
                    <label>請輸入密碼:</label>
                    @Html.Password("Password", null, new { @class = "form-control" })
                    @*<input type="password" class="form-control" id="Password" name="Password" placeholder="密碼">*@
                    @Html.ValidationSummary(true, "", new { @class = "error" })
                    <button class="btn btn-primary">Login</button>
                    <label>系統設計 : 莊柏軒、林亞諾 <br /> 系統測試 : 李柏慶、張慶億</label>
                </div>                   

            </div>
        </div>
    }






    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/chart.js/chart.umd.js"></script>
    <script src="~/vendor/echarts/echarts.min.js"></script>
    <script src="~/vendor/quill/quill.min.js"></script>
    <script src="~/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Scripts/main.js"></script>

</body>

</html>